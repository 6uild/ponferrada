{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es6",
    "lib": ["es6"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*stories.tsx"]
}
