{
  "extends": "../../config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es6",
    "lib": ["es6"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*stories.tsx"]
}
