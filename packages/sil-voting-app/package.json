{
  "name": "sil-voting-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@iov/bcp": "^0.15.0",
    "@iov/core": "^0.15.0",
    "@iov/jsonrpc": "^0.15.0",
    "@material-ui/core": "4.0.2",
    "@material-ui/styles": "4.0.2",
    "medulas-react-components": "^0.0.4",
    "normalize.css": "^8.0.1",
    "react": "16.9.0-alpha.0",
    "react-dom": "16.9.0-alpha.0",
    "react-redux": "^7.1.0",
    "react-router-dom": "5.0.0",
    "redux": "4.0.1"
  },
  "devDependencies": {
    "react-scripts": "3.0.0"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint -c .eslintrc.js --max-warnings 0 'src/**/*.ts{,x}'",
    "format": "prettier --write --loglevel warn './src/**/*.{ts,tsx,json,md,css}'",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test-dom": "TZ=UTC LANG=en_US.UTF-8 CI=true react-scripts test '\\.dom\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-e2e": "TZ=UTC LANG=en_US.UTF-8 CI=true react-scripts test '\\.e2e\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom --runInBand",
    "use-config-development": "cd ../sanes-chrome-extension && yarn use-config-development && yarn override-config-development && cd ../sil-voting-app",
    "test": "yarn use-config-development && yarn test-dom && yarn test-e2e"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
