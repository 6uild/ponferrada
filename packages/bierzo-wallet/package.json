{
  "name": "bierzo-wallet",
  "version": "0.1.7",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.17",
    "@fortawesome/free-regular-svg-icons": "^5.8.1",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@iov/bcp": "^0.16.0",
    "@iov/encoding": "^0.16.0",
    "@iov/ethereum": "^0.16.0",
    "@iov/faucets": "^0.16.0",
    "@iov/jsonrpc": "^0.16.0",
    "@material-ui/core": "^4.3.1",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.3.0",
    "@sentry/browser": "^5.5.0",
    "concurrently": "^4.1.0",
    "file-saver": "^2.0.2",
    "final-form": "^4.18.2",
    "medulas-react-components": "^0.1.7",
    "normalize.css": "^8.0.1",
    "react": "16.9.0-rc.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "16.9.0-rc.0",
    "react-final-form-hooks": "^2.0.1",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@types/clipboardy": "^2.0.1",
    "@types/express": "^4.16.1",
    "@types/file-saver": "^2.0.1",
    "@types/react-copy-to-clipboard": "^4.2.6",
    "clipboardy": "^2.1.0",
    "react-scripts": "^3.0.1"
  },
  "scripts": {
    "use-extension-config-development": "cd ../sanes-chrome-extension && yarn use-config-development && yarn override-config-development && cd ../bierzo-wallet",
    "override-config-development": "mkdir -p ./build/static/config && cp ./src/config/development.json ./build/static/config/conf.json",
    "override-config-staging": "mkdir -p ./build/static/config && cp ./src/config/staging.json ./build/static/config/conf.json",
    "override-config-production": "mkdir -p ./build/static/config && cp ./src/config/production.json ./build/static/config/conf.json",
    "lint": "tsc --noEmit && eslint -c .eslintrc.js --max-warnings 0 'src/**/*.ts{,x}'",
    "format": "prettier --write --loglevel warn './src/**/*.{ts,tsx,json,md,css}'",
    "start-development": "yarn override-config-development && react-scripts start",
    "start-staging": "yarn override-config-staging && react-scripts start",
    "start-production": "yarn override-config-production && react-scripts start",
    "start": "yarn start-development",
    "build-development": "yarn react-scripts build && yarn override-config-development",
    "build-staging": "react-scripts build && yarn override-config-staging",
    "build-production": "react-scripts build && yarn override-config-production",
    "build": "yarn build-development",
    "test-dom": "yarn override-config-development && CI=true react-scripts test '\\.dom\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom",
    "test-unit": "yarn override-config-development && CI=true react-scripts test '\\.unit\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom --detectOpenHandles",
    "test-e2e": "yarn override-config-development && yarn use-extension-config-development && CI=true react-scripts test '\\.e2e\\.(spec|test)\\.[jt]s[x]?$' --env=jsdom --runInBand",
    "test-single": "yarn override-config-development && yarn use-extension-config-development && CI=true react-scripts test --env=jsdom --detectOpenHandles",
    "test": "yarn test-unit && yarn test-dom && yarn test-e2e"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
