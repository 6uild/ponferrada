{
  "name": "sanes-chrome-extension",
  "version": "0.0.0",
  "private": true,
  "config": {
    "cs": "src/extension/contentscript.ts",
    "bs": "src/extension/backgroundscript.ts"
  },
  "scripts": {
    "use-config-test": "cp ./config/test.json ./public/assets/config/conf.json",
    "use-config-development": "cp ./config/development.json ./public/assets/config/conf.json",
    "use-config-production": "cp ./config/production.json ./public/assets/config/conf.json",
    "build": "react-scripts build $npm_package_config_cs $npm_package_config_bs",
    "export": "yarn use-config-production && yarn build && web-ext build --source-dir ./build/ --artifacts-dir ./exports --overwrite-dest",
    "format": "prettier --write --loglevel warn './src/**/*.{ts,tsx,json,md,css}'",
    "lint": "eslint -c .eslintrc.js 'src/**/*.ts{,x}'",
    "start": "yarn use-config-test && react-scripts start $npm_package_config_cs $npm_package_config_bs",
    "start:firefox:test": "yarn use-config-test && yarn build && web-ext run --source-dir ./build/",
    "start:firefox:development": "yarn use-config-development && yarn build && web-ext run --source-dir ./build/",
    "start:firefox:production": "yarn use-config-production && yarn build && web-ext run --source-dir ./build/",
    "test-dom": "yarn use-config-test && CI=true react-scripts test '(index|dom).(spec|test).[jt]s[x]?' --env=jsdom",
    "test-e2e": "yarn use-config-test && CI=true react-scripts test '(e2e.spec|e2e.test).[jt]s[x]?' --env=jsdom ",
    "test-unit": "yarn use-config-test && CI=true react-scripts test --env=jsdom ",
    "test": "yarn test-dom && yarn test-e2e"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@iov/bns": "^0.13.0",
    "@iov/core": "^0.13.0",
    "@iov/crypto": "^0.13.0",
    "@iov/ethereum": "^0.13.0",
    "@iov/keycontrol": "^0.13.0",
    "@iov/lisk": "^0.13.0",
    "@types/chrome": "^0.0.81",
    "@types/history": "^4.7.2",
    "@types/jest": "24.0.6",
    "@types/node": "11.9.4",
    "@types/random-js": "^1.0.31",
    "@types/react": "16.8.3",
    "@types/react-dom": "16.8.2",
    "@types/react-redux": "^7.0.1",
    "@types/react-router-dom": "^4.3.1",
    "connected-react-router": "^6.3.1",
    "encoding-down": "^6.0.1",
    "final-form": "^4.12.0",
    "history": "^4.7.2",
    "level-js": "^4.0.0",
    "medulas-react-components": "*",
    "memdown": "^3.0.0",
    "random-js": "^2.0.0-rc5",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "typesafe-actions": "^3.2.1",
    "webext-redux": "^2.0.1"
  },
  "devDependencies": {
    "@types/encoding-down": "^5.0.0",
    "@types/levelup": "^3.1.0",
    "@types/memdown": "^3.0.0",
    "chrome-extension-react-scripts": "^0.1.0",
    "puppeteer": "^1.13.0"
  }
}
