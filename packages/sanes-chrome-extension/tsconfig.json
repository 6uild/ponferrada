{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "allowJs": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "noEmit": true
  },
  "include": ["src/**/*"]
}
